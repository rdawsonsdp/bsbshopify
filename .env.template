# Shopify to Google Sheets Sync Environment Variables
# Copy this file to .env and fill in your actual values

# Shopify Configuration
SHOPIFY_STORE_NAME=brown-sugar-pre-orders
SHOPIFY_ACCESS_TOKEN=your_shopify_access_token_here

# Google Sheets Configuration
GOOGLE_SERVICE_ACCOUNT_FILE=/path/to/your/google-service-account-key.json
TEMPLATE_SPREADSHEET=Customer Orders
TARGET_SPREADSHEET=Customer Orders-3-1

# Sync Configuration
LOOKBACK_DAYS=30
BATCH_SIZE=250
MAX_RETRIES=3
RETRY_DELAY=5